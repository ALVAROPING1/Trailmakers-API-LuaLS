{
    "$schema": "https://raw.githubusercontent.com/LuaLS/LLS-Addons/main/schemas/addon_config.schema.json",
    "name": "Trailmakers Modding API Addon",
    "files": ["main.lua"],
    "settings": {
        // Mods are single file, so the global environment is local to the respective mod's file
        // Some API methods require functions to be in the global environment, so functions are commonly defined there
        "Lua.diagnostics.disable": ["lowercase-global"],
        "Lua.runtime.builtin": {
            // Modules partially/completely disabled. Non-disabled elements in partially disabled modules are redefined in `std-disabled.lua`
            "os": "disable",
            "io": "disable",
            "debug": "disable",
            "package": "disable",
            "basic": "disable",
        },
        "Lua.runtime.nonstandardSymbol": ["!="],
        "Lua.runtime.version": "Lua 5.2",
    }
}
